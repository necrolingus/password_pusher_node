FROM lts-alpine3.13
WORKDIR /usr/src/app
COPY package*.json ./
RUN npm install
COPY . .

ENV ENCRYPTIONKEY
ENV FORCEDBRECREATE
ENV VACUUMINTERVAL
ENV DBLOGGING
ENV DBHOST
ENV DBUSER
ENV DBPASSWORD
ENV DATABASE
ENV DBDIALECT
ENV DBDIALECTOPTIONSUSEUTC
ENV DBPOOLMAX
ENV DBPOOLMIN
ENV DBPOOLACQUIRE
ENV DBPOOLIDLE
ENV DBTIMEZONE
ENV NODEPORT


EXPOSE 8080